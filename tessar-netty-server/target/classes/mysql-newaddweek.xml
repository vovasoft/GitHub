<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="NewAddWeek">
    <!-- 定义insert语句 -->


    <insert id="insert" useGeneratedKeys="false" keyProperty="id">
        insert into NewAddDWeek (dateID,cID,gID,sID,newAddNum,activeNum,loginCount,averageLogin,allPlayerNum)
        values (#{dateID},#{cID},#{gID},#{sID},#{newAddNum},#{activeNum},#{loginCount},#{averageLogin},#{allPlayerNum})
    </insert>

    <select id="findByObject" resultType="_NewAddWeek">
        select * from NewAddDWeek where dateID = #{dateID} AND cID = #{cID} AND gID = #{gID} AND sID = #{sID}
    </select>

    <insert id="update">
        update NewAddDWeek set newAddNum=newAddNum+#{newAddNum},activeNum=activeNum+#{activeNum},loginCount=loginCount+#{loginCount},averageLogin=averageLogin+#{averageLogin},allPlayerNum=allPlayerNum+#{allPlayerNum}
        where id=#{id}
    </insert>

    <select id="findDayCount" resultType="java.lang.Integer">
        select COUNT(dateID) from NewAddDWeek where cID = #{cID} AND gID = #{gID} AND sID = #{sID}
    </select>

